  </Variable>
  <Variable
    Name="p_job_no"
    Kind="viewcriteria"
    Type="java.lang.String">
    <Properties>
      <SchemaBasedProperties>
        <DISPLAYHINT
          Value="Hide"/>
      </SchemaBasedProperties>
    </Properties>
  </Variable>
  <SQLQuery>
    <![CDATA[SELECT we.wip_entity_name job_number, 
      wdj.start_quantity job_qty,
      (SELECT SUM (DECODE (UPPER (mtt.transaction_type_name),
                      'WIP COMPLETION', mmt.transaction_quantity,
                      'WIP COMPLETION RETURN', mmt.transaction_quantity
                     )
                 ) inspection_quantity 
from  wip_discrete_jobs wdj1
        ,wip_entities we1
        ,mtl_material_transactions mmt
        ,mtl_transaction_types  mtt
WHERE we1.WIP_ENTITY_ID = wdj1.WIP_ENTITY_ID
and    mmt.TRANSACTION_SOURCE_ID = wdj1.WIP_ENTITY_ID
and    mmt.TRANSACTION_TYPE_ID = mtt.TRANSACTION_TYPE_ID
and we1.wip_entity_id = we.wip_entity_id) inspection_qty
  FROM wip_entities we,
       wip_discrete_jobs wdj
 WHERE we.wip_entity_id = wdj.wip_entity_id
   AND wdj.attribute13 = 'FIN'
   AND attribute_category = 'Job Details'
   AND wdj.attribute1 = NVL (:p_wo_number, wdj.attribute1)
   AND wdj.organization_id = NVL (:p_org_id, wdj.organization_id)
   AND we.wip_entity_id NOT IN (SELECT NVL (job_id, 0)
                                  FROM pwc_inspection_process_header)]]>
  </SQLQuery>
